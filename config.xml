<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hrmonitor.com" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HRM</name>
    <description>
        Heart Rate Monitor.
    </description>
    <author email="meddah.abdellah.spcx@gmail.com">
        Meddah Abdallah
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-background-mode" spec="^0.7.3" />
    <plugin name="cordova-plugin-ble-central" spec="^1.2.2" />
    <plugin name="cordova-plugin-insomnia" />
    <plugin name="cordovarduino" src="https://github.com/xseignard/cordovarduino.git" />
    <plugin name="cordova-plugin-network-information" src="https://github.com/apache/cordova-plugin-network-information.git" />
    <preference name="phonegap-version" value="cli-8.0.0" />
</widget>
